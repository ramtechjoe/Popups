<?xml version="1.0" encoding="utf-8"?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Popups.ViewModels"
             xmlns:prism="http://prismlibrary.com"
             x:DataType="viewModels:TestPopupPageViewModel"
             prism:DialogLayout.CloseOnBackgroundTapped="True"
             x:Class="Popups.Views.TestPopupPage">
    

    <Border BackgroundColor="WhiteSmoke" HeightRequest="400" WidthRequest="400" StrokeThickness="1">
        <Grid RowDefinitions="Auto,Auto" VerticalOptions="Center">
            <Label Text="Test Background Click" FontSize="24"/>

            <Button Grid.Row="1" Text="Close Dialog" Command="{Binding ClosePopupCommand}"></Button>
        </Grid>
    </Border>
    
</ContentView>